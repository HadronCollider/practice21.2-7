<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor"
    tools:context=".CitiesActivity">


    <TextView
        android:id="@+id/topShape"
        android:layout_width="936px"
        android:layout_height="200px"
        android:background="@drawable/radius_up"
        android:text="Города"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="96px"
        android:fontFamily="@font/open_sans_bold"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/cityscape"
            android:layout_width="320dp"
            android:layout_height="200dp"
            android:layout_marginTop="200px"
            app:srcCompat="@drawable/c1" />

        <TextView
            android:id="@+id/cityTextViewMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/open_sans_bold"
            android:text="Токио"
            android:textColor="@android:color/white"
            android:textSize="34sp"
            android:gravity="center"
            android:layout_marginBottom="30dp"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/city_flag1"
                android:layout_width="64dp"
                android:layout_height="40dp"
                android:background="@drawable/f83"
                android:layout_marginRight="10dp"/>

            <Button
                android:id="@+id/city1"
                android:layout_width="275dp"
                android:layout_height="40dp"
                android:background="@drawable/city_shape"
                android:fontFamily="@font/open_sans_bold"
                android:text="Южная Корея"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:layout_marginBottom="30dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/city_flag2"
                android:layout_width="64dp"
                android:layout_height="40dp"
                android:background="@drawable/f83"
                android:layout_marginRight="10dp"/>

            <Button
                android:id="@+id/city2"
                android:layout_width="275dp"
                android:layout_height="40dp"
                android:background="@drawable/city_shape"
                android:fontFamily="@font/open_sans_bold"
                android:text="Южная Корея"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:layout_marginBottom="30dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/city_flag3"
                android:layout_width="64dp"
                android:layout_height="40dp"
                android:background="@drawable/f83"
                android:layout_marginRight="10dp"/>

            <Button
                android:id="@+id/city3"
                android:layout_width="275dp"
                android:layout_height="40dp"
                android:background="@drawable/city_shape"
                android:fontFamily="@font/open_sans_bold"
                android:text="Южная Корея"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:layout_marginBottom="30dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/city_flag4"
                android:layout_width="64dp"
                android:layout_height="40dp"
                android:background="@drawable/f83"
                android:layout_marginRight="10dp"/>

            <Button
                android:id="@+id/city4"
                android:layout_width="275dp"
                android:layout_height="40dp"
                android:background="@drawable/city_shape"
                android:fontFamily="@font/open_sans_bold"
                android:text="Южная Корея"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:layout_marginBottom="30dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/city_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans_bold"
            android:text="  "
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingTop="10dp"/>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>