<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2D9AFF"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".FormatActivity">


    <TextView
        android:id="@+id/fTextView"
        android:layout_width="341dp"
        android:layout_height="98dp"
        android:background="@drawable/radius_up"
        android:fontFamily="@font/open_sans_bold"
        android:text="Формат"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/b_flags"
        android:layout_width="303dp"
        android:layout_height="wrap_content"
        android:background="@drawable/city_shape"
        android:fontFamily="@font/open_sans_bold"
        android:text="Флаги"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/b_continents"
        app:layout_constraintTop_toBottomOf="@+id/b_capitals"
        tools:layout_editor_absoluteX="54dp" />

    <Button
        android:id="@+id/b_capitals"
        android:layout_width="303dp"
        android:layout_height="wrap_content"
        android:background="@drawable/city_shape"
        android:fontFamily="@font/open_sans_bold"
        android:text="Столицы"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/b_flags"
        app:layout_constraintTop_toBottomOf="@+id/fTextView"
        tools:layout_editor_absoluteX="54dp" />

    <Button
        android:id="@+id/b_continents"
        android:layout_width="303dp"
        android:layout_height="wrap_content"
        android:background="@drawable/city_shape"
        android:fontFamily="@font/open_sans_bold"
        android:text="Части света"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/b_cities"
        app:layout_constraintTop_toBottomOf="@+id/b_flags"
        tools:layout_editor_absoluteX="54dp" />

    <Button
        android:id="@+id/b_cities"
        android:layout_width="303dp"
        android:layout_height="wrap_content"
        android:background="@drawable/city_shape"
        android:fontFamily="@font/open_sans_bold"
        android:text="Города"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/b_continents"
        tools:layout_editor_absoluteX="54dp" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        tools:ignore="ExtraText" />


</androidx.constraintlayout.widget.ConstraintLayout>