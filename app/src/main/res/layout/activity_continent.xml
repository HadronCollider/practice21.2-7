<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2D9AFF"
    android:orientation="vertical"
    tools:context=".ContinentActivity">

    <TextView
        android:id="@+id/textView_continent"
        android:layout_width="936px"
        android:layout_height="200px"
        android:layout_gravity="center"
        android:background="@drawable/radius_up"
        android:fontFamily="@font/open_sans_bold"
        android:gravity="center"
        android:text="Части света"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="96px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/c_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans_bold"
        android:gravity="center"
        android:text="Правильно: 0"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="230px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewС"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/open_sans_bold"
            android:gravity="center"
            android:text="в Азии:"
            android:textColor="#FFFFFF"
            android:textSize="34dp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingRight="30dp">

                <Button
                    android:id="@+id/cont_btn1"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/city_shape"
                    android:fontFamily="@font/open_sans_bold"
                    android:longClickable="false"
                    android:text="Китай"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/cont_btn5"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/city_shape"
                    android:fontFamily="@font/open_sans_bold"
                    android:longClickable="false"
                    android:text="Тунис"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/cont_btn9"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/city_shape"
                    android:fontFamily="@font/open_sans_bold"
                    android:longClickable="false"
                    android:text="Аргентина"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/cont_btn7"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/city_shape"
                    android:fontFamily="@font/open_sans_bold"
                    android:longClickable="false"
                    android:text="Панама"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/cont_btn2"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/city_shape"
                    android:fontFamily="@font/open_sans_bold"
                    android:longClickable="false"
                    android:text="Индия"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:layout_marginBottom="30dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/cont_btn8"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/city_shape"
                    android:fontFamily="@font/open_sans_bold"
                    android:longClickable="false"
                    android:text="Бразилия"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/cont_btn3"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/city_shape"
                    android:fontFamily="@font/open_sans_bold"
                    android:longClickable="false"
                    android:text="Мьянма"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/cont_btn10"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/city_shape"
                    android:fontFamily="@font/open_sans_bold"
                    android:longClickable="false"
                    android:text="Австралия"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/cont_btn4"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/city_shape"
                    android:fontFamily="@font/open_sans_bold"
                    android:longClickable="false"
                    android:text="Бангладеш"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/cont_btn6"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/city_shape"
                    android:fontFamily="@font/open_sans_bold"
                    android:longClickable="false"
                    android:text="Германия"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:layout_marginBottom="30dp"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/confirm_btn"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:background="#329AD5"
        android:text="Подтвердить"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="50dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>